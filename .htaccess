# WashDrive - Configurazione Apache per sicurezza e performance

# ===============================================
# SICUREZZA
# ===============================================

# Headers di sicurezza
<IfModule mod_headers.c>
    # Protezione XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevenzione MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Protezione Clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://www.google.com https://www.gstatic.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.tailwindcss.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com; frame-src https://www.google.com;"
    
    # HSTS (solo se hai HTTPS)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Nascondi informazioni server
ServerTokens Prod
Header unset Server
Header unset X-Powered-By

# Blocca accesso a file sensibili
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|config)$">
    Require all denied
</FilesMatch>

# Blocca directory browsing
Options -Indexes

# ===============================================
# PERFORMANCE E CACHE
# ===============================================

# Compressione GZIP
<IfModule mod_deflate.c>
    # Comprimi questi tipi di file
    <IfModule mod_filter.c>
        AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
        AddOutputFilterByType DEFLATE application/javascript application/json application/xml
        AddOutputFilterByType DEFLATE application/rss+xml application/atom+xml
        AddOutputFilterByType DEFLATE image/svg+xml
    </IfModule>
</IfModule>

# Cache Headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    
    # HTML files
    ExpiresByType text/html "access plus 1 week"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Manifest e XML
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType application/xml "access plus 1 week"
    ExpiresByType text/xml "access plus 1 week"
</IfModule>

# Cache Control headers
<IfModule mod_headers.c>
    # CSS, JS, fonts - cache lungo
    <FilesMatch "\.(css|js|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Immagini - cache lungo
    <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # HTML - cache breve
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=604800, public"
    </FilesMatch>
    
    # JSON, XML - cache moderato
    <FilesMatch "\.(json|xml)$">
        Header set Cache-Control "max-age=604800, public"
    </FilesMatch>
</IfModule>

# ===============================================
# REWRITE RULES E URL CLEAN
# ===============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS (decommentare quando hai il certificato SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remove .html extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
    
    # Redirect .html to clean URLs
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [NC,L,R=301]
    
    # Redirect index to root
    RewriteRule ^index/?$ / [R=301,L]
    
    # Gestione shortcut PWA
    RewriteCond %{QUERY_STRING} action=book
    RewriteRule ^$ /? [R=302,L]
</IfModule>

# ===============================================
# MIME TYPES
# ===============================================

<IfModule mod_mime.c>
    # Web App Manifest
    AddType application/manifest+json .webmanifest
    
    # Web fonts
    AddType font/woff .woff
    AddType font/woff2 .woff2
    
    # SVG
    AddType image/svg+xml .svg .svgz
    
    # WebP images
    AddType image/webp .webp
</IfModule>

# ===============================================
# ERROR PAGES
# ===============================================

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# ===============================================
# LIMITS E PROTEZIONI
# ===============================================

# Limite dimensione upload
LimitRequestBody 10485760

# Rate limiting (se disponibile mod_limitipconn)
<IfModule mod_limitipconn.c>
    <Location />
        MaxConnPerIP 10
    </Location>
</IfModule>